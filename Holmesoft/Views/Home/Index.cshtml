@{
    ViewData["Title"] = "Benjamin Holmes";
}
<div class="background"></div>
    <div class="row justify-content-center mb-4">
        <div class="card-content w-sm-90 w-md-75 w-lg-75 w-xl-75 mx-auto">
            <div class="card-columns">
                <div class="card profile-card-1 bg-primary">
                    <img src="~/images/me.png" alt="profile-image" class="profile" />
                    <a class="stretched-link" asp-area="" asp-controller="Personal" asp-action="Index"></a>
                    <div class="card-content">
                        <h2 class="text-title">
                            Benjamin Holmes<small>Solutions Engineering<br />Manager</small>
                        </h2>
                        <div class="icon-block my-2">
                            <a href="https://www.linkedin.com/in/bholmes111/" target="_blank"><i class="fab fa-linkedin-in"></i></a>
                            <a href="https://github.com/bholmes111" target="_blank"><i class="fab fa-github"></i></a>
                        </div>
                    </div>
                </div>
                <div class="card border-0">
                    <a class="stretched-link" asp-area="" asp-controller="Personal" asp-action="Resume"></a>
                    <img class="card-img w-100 h-auto" src="~/images/resume_sm.jpg" alt="Resume">
                </div>
                <div class="card border-0">
                    <img class="background rounded w-100 h-auto" src="~/images/gray-background.png" alt="Card image">
                    <div class="card-body card-img-overlay m-0 p-0 text-center">
                        <a class="stretched-link" asp-area="" asp-controller="Personal" asp-action="Contact"></a>
                        <h5 class="card-header rounded-top text-primary font border-bottom-0 p-2">Contact Me</h5>
                        <img class="card-img w-50" src="~/images/email-icon.png" alt="Contact Me">
                    </div>
                </div>
            </div>
        </div>
    </div>